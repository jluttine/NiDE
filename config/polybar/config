[bar/nide]
background=${colors.background}
border-size=0
cursor-click=pointer
cursor-scroll=ns-resize
enable-ipc=true
fixed-center=true
font-0=JetBrainsMono Nerd Font Mono:size=12
;; NOTE: You need Nerdfonts >=2.3.0 for Symbols to contain all the used icons
font-1="Symbols Nerd Font Mono:size=16"
foreground=${colors.foreground}
height=28pt
line-color=#f00
line-size=3
module-margin-left=1
module-margin-right=2
modules-center=date
modules-left=i3 title
modules-right=xkeyboard pulseaudio battery
monitor=${env:MONITOR:}
tray-padding=0pt
tray-position=right
tray-maxsize=25pt
width=100%

[colors]
alert=#bd2c40
background=#222
background-alt=#444
foreground=#dfdfdf
foreground-alt=#555
primary=#ffb52a
secondary=#e60053

[module/battery]
type=internal/battery
adapter=ADP1
battery=BAT0
ramp-capacity-0="%{T2}Ôñç"
ramp-capacity-1="%{T2}Ôïπ"
ramp-capacity-2="%{T2}Ôï∫"
ramp-capacity-3="%{T2}Ôïª"
ramp-capacity-4="%{T2}Ôïº"
ramp-capacity-5="%{T2}ÔïΩ"
ramp-capacity-6="%{T2}Ôïæ"
ramp-capacity-7="%{T2}Ôïø"
ramp-capacity-8="%{T2}ÔñÄ"
ramp-capacity-9="%{T2}ÔñÅ"
ramp-capacity-10="%{T2}Ôï∏"
format-charging="<label-charging> <ramp-capacity>%{T2}Û±êã"
label-charging="%{T-}%percentage:3%%"
full-at=102
;; Is it possible to detect when running on AC power, not charging? Now,
;; format-full is used when the battery charge is 100% regardless of whether
;; it's discharging, charging or full. Or maybe if full-at>100, then the full
;; state gets enabled only when the battery reports it's full and it doesn't
;; charge anymore, so in that case we could deduce it's running on AC power?
format-full="<label-full> <ramp-capacity>%{T2}ÔÆ£"
label-full=${self.label-charging}
;; Need to use an invisible symbol at the end because Symbola has no space
;; character and we want to keep the labels equally wide in all modes
;; (discharge/charge/low/full)
format-discharging="<label-discharging> <ramp-capacity>%{F#00}Û±êã"
label-discharging=${self.label-charging}
low-at=10
format-low="<label-low> %{F#F00}<ramp-capacity><animation-low>"
label-low=${self.label-charging}
animation-low-0="%{T2}ÔÅ±"
animation-low-1="%{T2}%{F#00}ÔÅ±"
animation-low-framerate=500

[module/date]
cnterval=5
date=%a %b %e
format-prefix-foreground=${colors.foreground-alt}
label=%date% %time%
time=%H:%M
type=internal/date

[module/i3]
format=<label-state> <label-mode>
index-sort=true
label-focused=%index%
label-focused-background=${colors.background-alt}
label-focused-padding=2
label-mode-background=${colors.primary}
label-mode-foreground=#000
label-mode-padding=2
label-unfocused=%index%
label-unfocused-padding=2
label-urgent=%index%
label-urgent-background=${colors.alert}
label-urgent-padding=2
label-visible=%index%
label-visible-background=${self.label-focused-background}
label-visible-padding=${self.label-focused-padding}
type=internal/i3
wrapping-scroll=false

